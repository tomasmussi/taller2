<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/title</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorSecondaryInverse">@color/icons</item>
        <item name="android:textColorTertiary">@color/primary_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.CardTheme">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBody">
        <item name="android:fontFamily">roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextCaption">
        <item name="android:fontFamily">roboto</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextTile">
        <item name="android:fontFamily">roboto</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextSubhead">
        <item name="android:fontFamily">roboto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextHead">
        <item name="android:fontFamily">roboto</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
