<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/border"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/contact_photo"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contact_photo">

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextBody"
            app:typeface="roboto_medium" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/contact_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_name"
            android:maxLines="3"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:textAppearance="@style/TextCaption"
            app:typeface="roboto_regular" />

        <Button
            android:id="@+id/button_addContact"

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAppearance="@style/TextCaption_button"
            android:text="Agregar contacto"
            android:layout_below="@+id/contact_summary"

            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/button_sendMessage"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAppearance="@style/TextCaption_button"
            android:text="Enviar mensaje"
            android:layout_below="@+id/button_addContact"
            android:layout_centerHorizontal="true"
            android:theme="@style/MyButton"/>
    </RelativeLayout>

</RelativeLayout>
