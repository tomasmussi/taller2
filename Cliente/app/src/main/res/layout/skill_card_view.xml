<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <!--android:id="@id/chkskill"-->
        <CheckBox
           android:id="@+id/chkskill"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/labelNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Skill: "
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/labelNombre"/>

        <TextView
            android:id="@+id/labelDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descripcion: "
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:layout_below="@id/labelNombre"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/descripcion"
            android:layout_marginLeft="1dp"
            android:layout_below="@id/labelNombre"
            android:layout_toRightOf="@id/labelDescripcion"/>
        <TextView
            android:id="@+id/labelCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentLeft="true"
            android:text="Categoria: "
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_below="@id/labelDescripcion"/>
        <TextView
            android:id="@+id/categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Large Text"
            android:layout_marginLeft="1dp"
            android:layout_below="@id/labelDescripcion"
            android:layout_toRightOf="@id/labelCategoria"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>